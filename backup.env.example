# Backblaze B2 Configuration
# Get these from: https://secure.backblaze.com/b2_buckets.htm
B2_ACCOUNT_ID=your_b2_account_id
B2_ACCOUNT_KEY=your_b2_application_key
B2_BUCKET_NAME=your-bucket-name

# Restic Configuration
RESTIC_REPOSITORY=b2:your-bucket-name:/restic-repo
RESTIC_PASSWORD=your_strong_restic_password

# Backup Configuration
# Optimized for homelab: 7 daily + 4 weekly + 6 monthly = ~17 snapshots
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=6
